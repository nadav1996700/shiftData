<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/WorkerHeader_IV_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/WorkerHeader_IV_workerPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/WorkerHeader_LBL_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/WorkerHeader_IV_workerPhoto"
        android:text="@string/First_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0A0610"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/WorkerHeader_LBL_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WorkerHeader_LBL_name"
        android:layout_marginStart="15dp"
        android:text="@string/ID"
        android:textColor="#0A0610"
        android:textSize="12sp" />

</RelativeLayout>