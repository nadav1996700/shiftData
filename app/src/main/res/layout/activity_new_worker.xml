<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTopBackground"
    android:orientation="vertical"
    tools:context="src.Activities.Activity_NewWorker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="90dp">

            <ImageButton
                android:id="@+id/newWorker_IV_photo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_user_round" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/newWorker_EDT_firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/First_name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#86818E"
            android:textColorHint="#86818E" />

        <EditText
            android:id="@+id/newWorker_EDT_lastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/Last_name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#86818E"
            android:textColorHint="#86818E" />

        <EditText
            android:id="@+id/newWorker_EDT_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/ID"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#86818E"
            android:textColorHint="#86818E" />

        <EditText
            android:id="@+id/newWorker_EDT_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/Phone"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#86818E"
            android:textColorHint="#86818E" />

        <EditText
            android:id="@+id/newWorker_EDT_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/Age"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#86818E"
            android:textColorHint="#86818E" />

        <TextView
            android:id="@+id/newWorker_LBL_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#EA1D0E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newWorker_BTN_add"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/Add"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="2dp" />

    </LinearLayout>

</LinearLayout>