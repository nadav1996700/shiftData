<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8DBDF"
    tools:context="src.fragments.Fragment_shifts">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_shifts_LAY_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F4"
        app:tabIconTint="#073AF1"
        app:tabSelectedTextColor="#073AF1"
        app:tabTextColor="#0C0710">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fragment_shifts_TAB_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/morning" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/fragment_shifts_TAB_evening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evening" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fragment_shifts_TAB_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night" />

    </com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_shifts_LAY_tabs">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_shifts_LST_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </RelativeLayout>

</RelativeLayout>